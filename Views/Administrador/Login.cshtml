
@{
    ViewBag.Title = "Login";
 }
<head>
    <title>login</title>
    <link rel="stylesheet" type="text/css" href="css/bootstrap.min.css">

    .
    <link rel="stylesheet" type="text/css" href="css/style.css">


</head>
<body>

    <div class="container body">
        @{
            if (!string.IsNullOrEmpty(ViewBag.Mesage))

            {
                <a href="~/Views/Administrador/Login.cshtml"> ~/Views/Administrador/Login.cshtml </a>
                //mensaje
                <div class="alert alert-danger">
                    @ViewBag.Mesage
                </div>

            }
        }

    </div>
    <div class="row text-center login-page">
        <!-- Button trigger modal -->
        <button type="button" class="btn btn-warning btn-lg" data-toggle="modal" data-target="#exampleModalCenter">
            Iniciar Login
        </button>

        <!-- Modal -->
        <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered" role="document">
                <!------------------->
                <div class="modal-content ">

                    <!--------------------->
                    <div class="col-md-12 login-form login moda">
                        <form action="/Administrador/Index" method="post">
                            <div class="row">
                                <div class="col-md-12 login-form-header">
                                    <p class="login-form-font-header">COVID<span>-19</span><p>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12 login-from-row">
                                    <input name="nombre" type="text" placeholder="Usuario" required />
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12 login-from-row">
                                    <input name="password" type="password" placeholder="password" required />
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12 login-from-row">
                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                    <button href="lista.html" class="btn btn-info">Entrar</button>
                                </div>
                            </div>
                        </form>
                    </div>

                    <div class="modal-footer"></div>
                </div>
            </div>
        </div>
    </div>

    <script src="js/jquery-3.5.1.min.js"></script>
    <script src="js/bootstrap.min.js"></script>
</body>


